algoritmo "01-salario"
// Função :
// Autor : Bruna Leitão
// Data : 28/09/2022

var

varNome : caractere
varSalario : real

inicio

escreval("Nome do funcionário: ")
leia(varNome)
escreval("Salário do funcionário: ")
leia(varSalario)
escreval( "O trabalhador ", varNome, " recebeu um salário de R$ ", varSalario:7:2, " em Setembro.")

fimalgoritmo
